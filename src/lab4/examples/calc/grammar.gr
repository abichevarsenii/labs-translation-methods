
@node {
    val res = 1;
}

start : expr;

expr : expr1 PLUS term { $expr.val = $expr.val + $term.val; }
    | expr1 MINUS term { $expr.val = $expr.val - $term.val; }
    | term { $expr.val = $term.val; };

expr1 : NUMBER { $expr1.val = $NUMBER.val; };

PLUS : '+';
MINUS : '-';
NUMBER : '[0-9]+' ;
